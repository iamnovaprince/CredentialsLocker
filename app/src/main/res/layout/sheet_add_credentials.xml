<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Homescreen"
    android:id="@+id/addCredentialLayout"
    android:background="@android:color/transparent"
   >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/dark_pink__box"
       android:id="@+id/addCredentialContainer"
       android:paddingTop="20dp"
       android:paddingBottom="20dp"
       android:gravity="center_horizontal">


       <EditText
           android:id="@+id/appName"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:background="@android:color/transparent"
           android:elevation="5dp"
           android:fontFamily="@font/yanoneregular"
           android:hint="App Name"
           android:inputType="text"
           android:scrollHorizontally="true"
           android:maxLines="1"
           android:textColor="@android:color/white"
           android:padding="5dp"
           android:textAlignment="center"
           android:textColorHint="@android:color/white"
           android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_box"
        android:padding="10dp"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:hint="Username"
        android:maxLines="1"
        android:elevation="5dp"
        android:textColorHint="@android:color/black"
        android:fontFamily="@font/dosis"
        android:textAlignment="viewStart"/>

    <EditText
        android:id="@+id/password"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_box"
        android:padding="10dp"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:textColorHint="@android:color/black"
        android:fontFamily="@font/dosis"
        android:elevation="5dp"
        android:textAlignment="viewStart"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="@drawable/yellow_box"
        android:text="Save"
        android:fontFamily="@font/dosis"
        android:elevation="5dp"/>

   </LinearLayout>

</LinearLayout>